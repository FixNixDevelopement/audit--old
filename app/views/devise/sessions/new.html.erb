<style type="text/css">
	.form-group.last { margin-bottom:0px; }
</style>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>




<div class="container">	

	<div class="row-fluid">

		<div class="col-lg-5 col-lg-offset-3" style="margin-left:300px;">

		<img src="/logo.png">

			<div class="panel panel-info">

				<div class="panel-heading">Sign In</div>

				<div class="panel-body">

					<form class="form-inline" role="form">

						<div class="form-group">

						<small><label class="col-sm-3 control-label">
                            Email</label></small>
								<div >
								<%= f.email_field :email, :autofocus => true , label: false %>
							</div>

						</div>

						<div class="form-group">
								<small><label class="col-sm-3 control-label">
                            Password</label></small>
								<div >
								<%= f.password_field :password , label: false %>
							</div>	
						</div>

						<div class="form-group">
							<div >
								<% if devise_mapping.rememberable? -%>
									<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
								<% end -%>
							</div>
						</div>

						<div class="form-group last">
							<div>
								<%= f.submit "Sign in" ,  class: "btn btn-default pull-left"%>
							</div>
						</div>
					
					</form>

				</div>

				<div class="panel-footer"> <%= render "devise/shared/links" %> </div>

			</div>
		
		</div>
		
	</div>

	

  	
	
</div>

<% end %>
