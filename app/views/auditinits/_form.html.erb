<script>
  $(function() {
     $( "#datepicker" ).datepicker({
      dateFormat: "yy-mm-dd"    });
     $( "#datepicker1" ).datepicker({
      dateFormat: "yy-mm-dd"    });     
  });
  </script>


<%= form_for(@auditinit) do |f| %>
  
    



<div class="panel panel-primary">
	<div class="panel-heading">Create New Audit</div>
  	<div class="panel-body" style="height:900px">
   		<div class="col-xs-12 col-sm-6 col-md-8 col-lg-offset-1">

      <!-- Error Message -->

        <% if @auditinit.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@auditinit.errors.count, "error") %> prohibited this businessunit from being saved:</h2>
            <ul>
              <% @auditinit.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>


        <ul class="breadcrumb">
          <li class="active"><a href="#organization" data-toggle="tab">Audit</a></li>
          <li><a href="#client" data-toggle="tab">Plan</a></li>
          <li><a href="#team" data-toggle="tab">Team </a></li>
          <li><a href="#confirmation" data-toggle="tab">Confirmation</a></li>
        </ul>
        		
			<div class="tab-content">
				<div class="tab-pane active" id="organization">
    				<div class="form-inputs">
    				  <div class="input-sm">
        				  <div class="col-lg-10">
					    	<%= f.label "Audit Title" %>
							<%= f.text_field :title, :class =>  "form-control" %>
				    	  </div>
			        	</div>
    				   <br/><br/>
    				   <div class="input-sm">
        				   <div class="col-lg-10">
    						   <%= f.label "Audit Purpose" %>
							   <%= f.text_area :purpose , :rows => 5, :cols => 25 , :class =>  "form-control" %>
   			    		    </div>
    					</div>
    					<br/><br/>
    					<div class="input-sm">
         					<div class="col-lg-10">
      							<%= f.label "Audit Scope" %>
								<%= f.text_area :scope , :rows => 5, :cols => 25 ,    :class =>  "form-control" %>
      						</div>
      					</div>
      					<br/><br/>
      					<div class="input-sm">
          					<div class="col-lg-10">
      							<%= f.label "Audit Summary" %>
								<%= f.text_area :summary , :rows => 5, :cols => 25 ,    :class =>  "form-control"%>
						    </div>
      					</div>
       					<br/><br/>                   
    				</div>
				</div>

				<div class="tab-pane" id="client">
    				<div class="form-inputs">
            <div class="input-sm">
                  <div class="col-lg-10">
                <%= f.label "Client Name" %>
              <%= f.text_field :client_name  ,:class =>  "form-control input-sm" %>
                </div>
                </div>
               <br/><br/>
    				  <div class="input-sm">
        				  <div class="col-lg-10">
					    	<%= f.label "Type" %>
							<%= f.text_field :a_type  ,:class =>  "form-control input-sm" %>
				    	  </div>
			        	</div>
    				   <br/><br/>
    				   <div class="input-sm">
        				   <div class="col-lg-10">
    						<%= f.label "Location" %>
							<%= f.text_field :location  ,:class =>  "form-control" %>  
   			    		    </div>
    					</div>
    					<br/><br/>
    					<div class="input-sm">
         					<div class="col-lg-4">
							   <%= f.label "Start Date" %>
							   <%= f.datepicker :start_date ,:class =>  "form-control input-sm" %>
      						</div>
      					</div>
      					<br/><br/>
      					<div class="input-sm">
          					<div class="col-lg-4">						
								<%= f.label "End Date " %>
								<%= f.datepicker :end_date ,:class =>  "form-control input-sm" %>	
						    </div>
      					</div>
       					<br/><br/>                   
    				</div>
				</div>

				<div class="tab-pane" id="team">
    				<div class="form-inputs">
    				  <div class="input-sm">
        				  <div class="col-lg-10">
					    	<%= f.label "Auditor Name" %>
							<%= f.text_field :auditor_name   ,:class =>  "form-control"%>
				    	  </div>
			        	</div>
    				   <br/><br/>
    				   <div class="input-sm">
        				   <div class="col-lg-10">
							<%= f.label "Auditor Email" %>
							<%= f.text_field :auditor_email  ,:class =>  "form-control"%>
   			    		    </div>
    					</div>
    					<br/><br/>
    					<div class="input-sm">
         					<div class="col-lg-10">
							   <%= f.label "Auditee Name" %>
							   <%= f.text_field :auditee_name ,:class =>  "form-control" %>
      						</div>
      					</div>
      					<br/><br/>
      					<div class="input-sm">
          					<div class="col-lg-10">						
								<%= f.label "Auditee Email" %>
								<%= f.text_field :auditee_email ,:class =>  "form-control" %>
						    </div>
      					</div>
       					<br/><br/>                   
    				</div>
				</div>

        <div class="tab-pane" id="confirmation">
            <div class="form-inputs">
              <div class="input-sm">
                <div class="col-lg-10">
                <%= f.submit 'Submit',  :class => "btn btn-success btn-sm" %>
                </div>
              </div>
               <br/><br/>      
            </div>
        </div>

    		</div>
		</div>
	</div>
</div>
