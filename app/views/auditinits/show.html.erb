<!DOCTYPE html>
<html>
<head>
	<title>Review Audit</title>
</head>
<body>

	<!-- Rendering menu  -->
	<%= render :partial => "layouts/menu" %>


	<!-- Main Layout -->

	<div class="container">

		<div class="panel panel-primary">

			<div class="panel-heading">
				<%= @auditinit.title %>
			</div>
			
			<div>
			<div class="panel-body">
				<div>
					<label>Purpose</label>
					<br />
					<%= @auditinit.purpose %>
				</div>
				<br />
				<div>
					<label>Scope</label>
					<br />
					<%= @auditinit.scope %>
				</div>
				<br />
				<div>
					<label>Summary</label>
					<br />
					<%= @auditinit.summary %>
				</div>

				<hr>

				<div>
					<label>Client</label>
					<br />
					<%= @auditinit.client_name %>
				</div>
				<br />
				<div>
					<label>Location</label>
					<br />
					<%= @auditinit.location %>
				</div>
				<br />
				<div>
					<label>Start Date</label>
					<br />
					<%= @auditinit.start_date %>
				</div>
				<br />
				<div>
					<label>End Date</label>
					<br />
					<%= @auditinit.end_date %>
				</div>

				<hr>

				<div>
					<label>Auditor Details</label>
					<br />
					<%= @auditinit.auditor_name%>
					<%= @auditinit.auditor_email %>
				</div>
				<br />

				<div>
					<label>Auditee Details</label>
					<br />
					<%= @auditinit.auditee_name %>
					<%= @auditinit.auditee_email %>
				</div>
				<br />

				<hr>

				<%= link_to 'Edit', edit_auditinit_path(@auditinit) , :class => "btn btn-primary" %> 
				<%= link_to 'Back', auditinits_path , :class => "btn btn-primary" %>

			</div>
			
		</div>
		
	</div>
	
</body>
</html>

    